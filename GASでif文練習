function moveFunction() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  const sheets = ss.getSheets();
  
  // シートが3枚あることを確認
  if (sheets.length !== 3) {
    throw new Error('シートは3枚必要です');
  }

  // 各シートの名前を探して並び替え
  const targetSheet = ss.getSheetByName('対象回線');
  const migrationSheet = ss.getSheetByName('マイグレ予実');
  const specialSheet = ss.getSheetByName('特殊回線');

  // すべてのシートが存在することを確認
  if (!targetSheet || !migrationSheet || !specialSheet) {
    throw new Error('必要なシートが見つかりません');
  }

  // シートを指定の順序に移動
  // 1. 対象回線を先頭に
  ss.setActiveSheet(targetSheet);
  ss.moveActiveSheet(1);
  
  // 2. マイグレ予実を2番目に
  ss.setActiveSheet(migrationSheet);
  ss.moveActiveSheet(2);
  
  // 3. 特殊回線を3番目に
  ss.setActiveSheet(specialSheet);
  ss.moveActiveSheet(3);
}

function moveSheet() {
  try {
    moveFunction();
  } catch(e) {
    Logger.log(e.name);    // エラー名
    Logger.log(e.message); // エラーメッセージ
    Logger.log(e.stack);   // エラー詳細（エラー発生の行番号など）
  }
}
