function zip(arrays) {
  return arrays[0].map((_, i) => arrays.map(array => array[i]));
}

// 空の要素を除去
let filteredControlNumbers = controlNumbersArray.filter(x => x !== '');
let filteredCreators = creatorsArray.filter(x => x !== '');
let filteredMailCounts = mailCountsArray.filter(x => x !== '');

// 配列の長さを揃える
let minLength = Math.min(filteredControlNumbers.length, filteredCreators.length, filteredMailCounts.length);
filteredControlNumbers = filteredControlNumbers.slice(0, minLength);
filteredCreators = filteredCreators.slice(0, minLength);
filteredMailCounts = filteredMailCounts.slice(0, minLength);

// 配列を結合
let combined = zip([filteredControlNumbers, filteredCreators, filteredMailCounts]);

let body = "■文書管理番号    作成者        周知メール回数\n";
for (let [controlNumber, creator, mailCount] of combined) {
  let paddedControlNumber = padRight(controlNumber, 16);
  let paddedCreator = padRight(creator, 12);
  let paddedMailCount = padLeft(mailCount + '回目', 6);
  body += `${paddedControlNumber}${paddedCreator}${paddedMailCount}\n`;
}

console.log(body);

function padRight(str, length) {
  return str + ' '.repeat(Math.max(0, length - str.length));
}

function padLeft(str, length) {
  return ' '.repeat(Math.max(0, length - str.length)) + str;
}
