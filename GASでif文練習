body += "■文書管理番号    作成者      周知メール回数\n";
body += "------------------------------------------------\n";
for (let i = 0; i < controlNumbersArray.length; i++) {
  if (controlNumbersArray[i]) {
    let controlNumber = controlNumbersArray[i].padEnd(16);
    let creator = creatorsArray[i].padEnd(10);
    let mailCount = mailCountsArray[i].toString().padStart(3) + "回目";
    body += `${controlNumber}${creator}${mailCount}\n`;
  }
}
body += "------------------------------------------------\n";
