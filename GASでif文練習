function padString(str, length, padLeft = false) {
  if (str.length >= length) {
    return str;
  }
  const padding = ' '.repeat(length - str.length);
  return padLeft ? padding + str : str + padding;
}

let body = "■文書管理番号    作成者        周知メール回数\n";
for (let i = 0; i < controlNumbersArray.length; i++) {
  if (controlNumbersArray[i] && controlNumbersArray[i].trim() !== '') {
    let controlNumber = padString(controlNumbersArray[i], 16);
    let creator = padString(creatorsArray[i], 12);
    let mailCount = padString(mailCountsArray[i] + '回目', 6, true);
    body += `${controlNumber}${creator}${mailCount}\n`;
  }
}

console.log(body);
