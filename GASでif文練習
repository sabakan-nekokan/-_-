# 元のコード
filterIDs = id_pass["PJ-ID"].iloc[0:].dropna().tolist()

# 修正後のコード
filterIDs = id_pass["PJ-ID"].iloc[0:].dropna().tolist()
if len(filterIDs) > 1:
    filterIDs = ','.join(map(str, filterIDs))
else:
    filterIDs = filterIDs[0]

# または、より簡潔に1行で書く場合：
filterIDs = ','.join(map(str, filterIDs)) if len(filterIDs) > 1 else filterIDs[0]
